%-

(:def fst
  (:lambda xy (text, text)
    (:match xy (x, _)
      x)))

(:def snd
  (:lambda xy (text, text)
    (:match xy (_,x)
      x)))

(:def greeter
  (:lambda dog (text, text)
    (:let
      [name ($fst dog)]
      [pronoun ($snd dog)]
        (:oneof
          (| "${name} eats toilet paper sometimes but ${pronoun} tries.")))))

(:def main
  ($ greeter ("Maxine", "she")))
